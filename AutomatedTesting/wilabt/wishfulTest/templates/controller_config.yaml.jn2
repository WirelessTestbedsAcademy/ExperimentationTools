controller_config:
{% for host in groups['test_controllers'] %}
  downlink: "tcp://{{ lookup('dig', host, '@10.0.0.4') }}:8990"
  uplink: "tcp://{{ lookup('dig', host, '@10.0.0.4') }}:8989"
{% endfor %}

hosts:
{% for host in groups['test_hosts'] %}
  - {"ip": {{ host }}, "port": 567890}
{% endfor %}

wifi:
{% for host in groups['test_wifi_hosts'] %}
  - {"ip": {{ host }}, "port": 567890}
{% endfor %}
